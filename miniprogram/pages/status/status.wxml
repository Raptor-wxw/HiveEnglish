<!--miniprogram/pages/status/status.wxml-->
<view class="top-container">
    <text class="top-total-num-text">{{continueDays}}</text>
    <text class="top-total-num-guide-text">连续学习</text>
    <view class="top-trisection-container">
        <view class="top-trisection">
            <text class="top-trisection-top-text">{{masterNum}}</text>
            <text class="top-trisection-bottom-text">已掌握</text>
        </view>
        <view class="top-trisection">
            <text class="top-trisection-top-text"></text>
            <text class="top-trisection-bottom-text"></text>
        </view>
        <view class="top-trisection">
            <text class="top-trisection-top-text">{{studingNum}}</text>
            <text class="top-trisection-bottom-text">正在学</text>
        </view>
    </view>
</view>
<view class="separator"/>
<view class="canvas-container">
    <view class="canvas-guide-container">
        <view class="canvas-guide-left" style="border-color:#1dd1a1;">进步曲线</view>
        <view class="canvas-guide-right" style="border-color:#7bed9f; opacity:0.4;">单词总数</view>
        <view class="canvas-guide-right" style="border-color:#2ed573; opacity:0.4;">已掌握</view>
    </view>
    <canvas canvas-id="canvas1" />
</view>
<view class="separator"/>
<view style="padding-top:20px;">
    <view class="trisaction" bindtap="toTaskPage">
        <view class="trisaction-top-container">
            <image  class="trisaction-top-icon" src="https://www.hive-net.cn/HiveEnglish/images/icons/photo.png"/>
        </view>
        <text class="trisaction-bottom-text">拍照翻译</text>
    </view>
    <view class="trisaction" bindtap="toCalendarPage">
        <view class="trisaction-top-container">
            <image  class="trisaction-top-icon" src="https://www.hive-net.cn/HiveEnglish/images/icons/vs.png"/>
        </view>
        <text class="trisaction-bottom-text">好友对战</text>
    </view>
    <view class="trisaction" style=" padding-bottom:20px">
        <view class="trisaction-top-container" bindtap="toRemindPage">
            <image  class="trisaction-top-icon" src="https://www.hive-net.cn/HiveEnglish/images/icons/word.png"/>
        </view>
        <text class="trisaction-bottom-text">单词接龙</text>
    </view>
</view>
<view class="view-contain-ti">
    <text class="text-ti">单词</text>
    <input name='searchWord' class="input1" placeholder="按下回车输出翻译结果" bindconfirm="translate"></input>
</view>
<view class="word" style="margin-left:30px" wx:if="{{hasReasult}}">
    <view class="word-top">
        <text class="word-text">{{searchReasult.wordHead}}</text>
        <view class="word-icon-container" data-type="0" data-word="{{searchReasult.fromspeech}}" catchtap="pronounce">
            <image class="word-icon" src="https://www.hive-net.cn/HiveEnglish/images/icons/sound.png"/>
        </view>
    </view>
    <view class="word-top">
        <text class="word-meaning">{{searchReasult.tranCn}}</text>
        <view class="word-icon-container" data-type="1" data-word="{{searchReasult.tospeech}}" catchtap="pronounce">
            <image class="word-icon" src="https://www.hive-net.cn/HiveEnglish/images/icons/sound.png"/>
        </view>
    </view>
</view>